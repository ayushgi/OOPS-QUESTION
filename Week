class rev{
    string s;
    public:
    void getdata(){
        cin>>s;
    }
    void print(){
        reverse(s.begin(),s.end());
        cout<<s;
    }
};
class volume{
    int length;
    int breadth;
    int height;
    int a;
    public:
    void cube(int si){
        this->a =si; 
        int area = a*a*a;
        cout<<area<<endl;
    }
    void cuboid(int l,int b,int h){
        this->length = l;
        this->breadth = b;
        this->height= h;
        cout<<length*breadth*height<<endl;
    }
};

class pali{
string s;
public:
bool check(string st){
    this->s = st;
    int i=0;
    int e = s.length();
    while(i<e){
        if(s[i]!=s[e]){
            cout<<"false"<<endl;
            break;
        }
        i++;e--;
    }
    cout<<"true";
    return 0;
}
};


