class area{

int length;
int breadth;
int side;
public:
void rect(int l,int b){
    this->length=l;
    this->breadth = b;
    int areaofrectangle = length*breadth;
    cout<<areaofrectangle<<endl;
}

void square(int s){
    this->side = s;
    int areaofsquare = side*side;
    cout<<areaofsquare;
}


};

